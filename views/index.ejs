<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= gameTitle %></title>

    <link href="https://fonts.googleapis.com/css2?family=Ranchers&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/index.css">

    <!-- Custom scripts -->
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/index.js" defer></script>

</head>

<body>
    <div id="memberId" style="display: none;"><%= memberId %></div>

    <div class="nav">
        <input type="checkbox" id="nav-check">
        <div class="nav-header">
            <div class="nav-title">
                Battleship
            </div>
        </div>
        <div class="nav-btn">
            <label for="nav-check">
                <span></span>
                <span></span>
                <span></span>
            </label>
        </div>

        <div class="nav-links">
            <a href="/login">Login</a>
        </div>
    </div>

    <div class="timer"></div>

    <% if(message) { %>
    <div class="message-alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= message %>
    </div>
    <% } %>

    <div class="container-center flex-container">

        <div class="flex-container-col border-green">
            <h1 class="board__name board__name--green">Me</h1>
            <table id="board1">
                <tbody>

                </tbody>
            </table>
        </div>

        <div class="flex-container-col border-red">
            <h1 class="board__name board__name--red">Opponent</h1>
            <table id="board2">
                <tbody>

                </tbody>
            </table>
        </div>
    </div>

    <div class="container-center">
        <a href="#" onclick="startGame()" class="startButton">Start</a>
    </div>

</body>

</html>